{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "twitch",
  "title": "Twitch",
  "description": "Search for Streams, Channels or Games on Twitch",
  "icon": "icon.png",
  "author": "dieserRobin",
  "contributors": [
    "Aayush9029",
    "suth",
    "pernielsentikaer",
    "MiracleXYZ",
    "Sheraff"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "primaryaction",
      "type": "dropdown",
      "title": "Primary Action",
      "required": false,
      "default": "detail",
      "data": [
        {
          "title": "Open via Browser",
          "value": "web"
        },
        {
          "title": "Open via Streamlink",
          "value": "streamlink"
        }
      ],
      "description": "Set the default action"
    },
    {
      "name": "streamlink",
      "type": "textfield",
      "default": "/opt/homebrew/bin/streamlink",
      "title": "Location of Streamlink binary",
      "required": false,
      "description": "Use 'where streamlink' or install via brew install streamlink"
    },
    {
      "name": "lowlatency",
      "type": "checkbox",
      "label": "Enable Low Latency",
      "default": false,
      "title": "Stream Latency",
      "required": false,
      "description": "VLC Player is required for low latency streams"
    },
    {
      "name": "streamlinkConfig",
      "type": "textfield",
      "title": "Custom Streamlink Config",
      "required": false,
      "description": "(optional) Path to custom streamlink config file"
    },
    {
      "name": "quality",
      "type": "dropdown",
      "default": "best",
      "title": "Video Quality",
      "required": false,
      "description": "Standard video quality",
      "data": [
        {
          "title": "Best",
          "value": "best"
        },
        {
          "title": "720p",
          "value": "720p"
        },
        {
          "title": "480p",
          "value": "480p"
        },
        {
          "title": "Worst",
          "value": "worst"
        }
      ]
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Search Streams",
      "description": "Search a Live Twitch Stream",
      "icon": "icon.png",
      "mode": "view"
    },
    {
      "name": "game",
      "title": "Search Games",
      "description": "Search a game on Twitch",
      "icon": "icon.png",
      "mode": "view"
    },
    {
      "name": "following",
      "title": "Search Following Channels",
      "description": "Search following Channels",
      "icon": "icon.png",
      "mode": "view",
      "preferences": [
        {
          "name": "userName",
          "type": "textfield",
          "title": "Twitch Username",
          "required": true,
          "description": "Your Twitch Username, from which to read the followed channels"
        }
      ]
    },
    {
      "name": "live",
      "title": "Display Live Followed Channels in the Menu Bar",
      "description": "Display Live Followed Channels in the Menu Bar",
      "icon": "icon.png",
      "mode": "menu-bar",
      "interval": "10m",
      "preferences": [
        {
          "name": "userName",
          "type": "textfield",
          "title": "Twitch Username",
          "required": true,
          "description": "Your Twitch Username, from which to read the followed channels"
        },
        {
          "name": "notify",
          "type": "checkbox",
          "title": "Enable Notifications",
          "default": false,
          "required": false,
          "description": "Show a Raycast HUD Notification when a followed channel goes live",
          "label": "When a followed channel goes live"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.4",
    "@raycast/utils": "^1.10.1",
    "millify": "^6.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-plugin": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.9.5",
    "prettier": "^3.1.1"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "publish": "ray publish"
  }
}